<!DOCTYPE html>
<html lang="ptbr">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">
<div class="corpinho">
    <header>
        <%- include('../partials/header'); %>
        <% if(req.session.loggedin) { %>
        <%- include('../partials/menu_dashboard'); %>
        <% } %>        
    </header>

    <main>
        <h1>Comentários</h1>
    
        <div class="comment-section">
            <% if (comentarios && comentarios.length > 0) { %>
                <ul class="comment-list">
                    <% comentarios.forEach(comentario => { %>
                        <li class="comment-item">
                            <div class="comment-user" style="display: flex;">
                                <%- include('../partials/icone'); %>                          
                                <%= comentario.usuario %>
                            </div>
                            
                            
                            <div class="comment-content">
                                <%= comentario.comentario %>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p class="no-comments">Nenhum comentário ainda.</p>
            <% } %>
        </div>
    
        <!-- Adicione um formulário para adicionar novos comentários, se necessário -->
        <form action="/blogar" method="POST" class="comment-form">
            <label for="comentario">Comentário:</label>
            <textarea name="comentario" required class="comment-textarea"></textarea>
            <button type="submit" class="comment-button">Adicionar Comentário</button>
        </form>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</div>
</body>